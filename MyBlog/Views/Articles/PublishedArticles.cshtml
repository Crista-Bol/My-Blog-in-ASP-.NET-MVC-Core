@model IEnumerable<MyBlog.Models.Article>

    <div class="profile-side">
        <h1 class="blog-name pt-lg-4 mb-0">Crista's Blog</h1>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="navigation" class="collapse navbar-collapse flex-column">
                <img class="profile-image mb-3 rounded-circle mx-auto" src="~/img/profile.jpg" alt="image">
                <div class="bio mb-3">Hi, my name is Crista Gantulga. I am a software developer. Here i will share my knowledge. Hope you will enloy. Thanks<br><a href="about.html">Find out more about me</a></div>
                <ul class="social-list list-inline py-3 mx-auto">
                    <li class="list-inline-item"><a href="#"><i class="fab fa-twitter fa-fw"></i></a></li>
                    <li class="list-inline-item"><a href="#"><i class="fab fa-linkedin-in fa-fw"></i></a></li>
                    <li class="list-inline-item"><a href="#"><i class="fab fa-github-alt fa-fw"></i></a></li>
                    <li class="list-inline-item"><a href="#"><i class="fab fa-stack-overflow fa-fw"></i></a></li>
                    <li class="list-inline-item"><a href="#"><i class="fab fa-codepen fa-fw"></i></a></li>
                </ul>
                <ul class="navbar-nav flex-column text-left">
                    <li class="nav-item active">
                        <a class="nav-link" href="index.html"><i class="fas fa-home fa-fw mr-2"></i>Blog Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="blog-post.html"><i class="fas fa-bookmark fa-fw mr-2"></i>Blog Post</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="about.html"><i class="fas fa-user fa-fw mr-2"></i>About Me</a>
                    </li>
                </ul>
            </div>
        </nav>
</div>

    <div class="main-wrapper">
        <div class="container">

            @foreach (var article in Model)
            {
                <div class="item mb-5">
                    <div class="media">
                        <img class="mr-3 img-fluid post-thumb d-none d-md-flex" src="assets/images/blog/blog-post-thumb-7.jpg" alt="image">
                        <div class="media-body">
                            <h3 class="title mb-1"><a href="blog-post.html">@article.Header</a></h3>
                            <div class="meta mb-1"><span class="date">Created @article.Created_Date</span><span class="time">5 min read</span><span class="comment"><a href="#">4 comments</a></span></div>
                            <div class="intro">
                                @if(article.Body.Length>0)
                                    @(article.Body.Length>150 ? article.Body.Substring(0,150):article.Body)
                            </div>
                            <a class="more-link" asp-action="Upsert" asp-route-Id="@article.Id">Read more &rarr;</a>
                        </div>
                    </div>
                </div>
             }
        </div>


