@model MyBlog.Models.ArticleCategory

@{
    ViewData["Title"] = "UpsertArtCat";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@(Model.Id==0?"New ":"Edit ") Article Category</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpsertArtCat" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" cols="20" rows="10"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@(Model.Id==0? "Create":"Update")" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
        </form>
    </div>
</div>

